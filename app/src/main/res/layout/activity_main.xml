<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_frame"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/button_remove"
            android:text="-"
            android:textSize="60px"
            android:textStyle="bold"
            android:onClick="remove"
            android:layout_marginLeft="180dp"
            android:layout_height="70dp"
            android:layout_width="180dp"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/button_add"
            android:text="+"
            android:textSize="60px"
            android:textStyle="bold"
            android:onClick="add"
            android:layout_height="70dp"
            android:layout_width="180dp"
            android:layout_gravity="bottom" />


    </FrameLayout>
    <!-- The navigation drawer -->

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_gravity="start"
        android:background="#ffffffff"
        android:choiceMode="singleChoice"
        android:gravity="center"
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imageButton_day"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_day_button" />

        <ImageButton
            android:id="@+id/imageButton_week"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_week_button" />

        <ImageButton
            android:id="@+id/imageButton_month"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_month_a" />

        <ImageButton
            android:id="@+id/imageButton_year"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_year_button" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/right_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:orientation="vertical"
        android:background="#B9F6CA">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="198dp"
            android:layout_height="128dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/ic_drawable_mc" />

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listview5"
            android:background="#B9F6CA"
            android:layout_below="@id/imageButton5"
            android:layout_marginTop="-8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_below="@id/imageButton5"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_drawable_ma" />

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listview6"
            android:background="#ffffffff"
            android:layout_below="@id/imageButton6"
            android:layout_marginTop="-15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_below="@id/imageButton6"
            android:layout_width="200dp"
            android:layout_height="132dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_drawable_settings" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_below="@id/imageButton7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/ic_drawable_empty" />

    </RelativeLayout >

</android.support.v4.widget.DrawerLayout>